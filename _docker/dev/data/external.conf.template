map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen $FZKC_EXPOSED_PORT_NGINX_HTTP;
    listen [::]:$FZKC_EXPOSED_PORT_NGINX_HTTP;
    #listen $FZKC_EXPOSED_PORT_NGINX_HTTPS ssl;
    #listen [::]:$FZKC_EXPOSED_PORT_NGINX_HTTPS ssl;
    server_name {%% FZKC_CASTLE_NAME %%}.{%% FZKC_PROJECT_NAME %%}.external.space;
    server_tokens off;
    root /noexistent;

    #ssl_certificate /etc/nginx/certs/SRV_backend.external.space-CHAIN.CERT.pem;
    #ssl_certificate_key /etc/nginx/certs/SRV_backend.external.space.KEY.pem;
    #ssl_protocols       TLSv1.2 TLSv1.3;
    #ssl_ciphers         HIGH:!aNULL:!MD5;

    #proxy_connect_timeout 60000s;
    #proxy_send_timeout 60000s;
    #proxy_read_timeout 60000s;
    #send_timeout 60000s;
    #fastcgi_send_timeout 60000s;
    #fastcgi_read_timeout 60000s;
 
    index index.php;
 
    charset utf-8;
 
    location /index.php {
        try_files /not_exists @octane;
    }
 
    location / {
        try_files $uri $uri/ @octane;
    }
 
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }
 
    access_log off;
    error_log  /var/log/nginx/error_{%% FZKC_CASTLE_NAME %%}.{%% FZKC_PROJECT_NAME %%}.space.log error;
 
    error_page 404 /index.php;
 
    location @octane {
        resolver 127.0.0.11 valid=300s;
        
        set $suffix "";
 
        if ($uri = /index.php) {
            set $suffix ?$query_string;
        }

        #proxy_bind $server_addr;
 
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        set $castle_hostname "http://{%% FZKC_CASTLE_NAME %%}.{%% FZKC_PROJECT_NAME %%}.space:{%% FZKC_CASTLE_PORT %%}";
 
        proxy_pass $castle_hostname$suffix;
    }
}
